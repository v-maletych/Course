#EXERCISE_1

number_1=float(input("Enter first number: "))
number_2=float(input("Enter second_number: "))
print(number_1+number_2)

#EXERCISE_2

number=int(input("How many numbers will you use: "))
list=[]
for num in range(number):
    list.append(int(input(":")))
list_2=sorted(list)
print(sorted(list))
print("Minimum:",list_2[0])
print("Maximum:",list_2[-1])

#EXERCISE_3

world=input("Enter a world: ")
reversed="".join(reversed(world))
print(reversed)
